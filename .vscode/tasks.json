{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "cmake --build .",
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "Cmake Debug",
            "type": "shell",
            "group": "build",
            "command": "cmake -DCMAKE_BUILD_TYPE=Debug ..",
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "Cmake Release",
            "type": "shell",
            "group": "build",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release ..",
            "options": {
                "cwd": "build"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "group": "build",
            "command": "rm -rf build/*"
        }
    ]
}